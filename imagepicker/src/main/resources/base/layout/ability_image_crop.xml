<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#000"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:height="48vp"
        ohos:width="match_parent"
        ohos:background_element="$color:ip_color_primary"
        ohos:clickable="true">

        <Image
            ohos:id="$+id:btn_back"
            ohos:height="match_parent"
            ohos:width="48vp"
            ohos:background_element="$graphic:selector_back_press"
            ohos:padding="12vp"
            ohos:vertical_center="true"
            ohos:image_src="$graphic:ic_arrow_back"/>

        <Component
            ohos:height="match_parent"
            ohos:width="2px"
            ohos:background_element="#2E2E32"
            ohos:bottom_margin="12vp"
            ohos:right_of="$id:btn_back"
            ohos:top_margin="12vp"/>

        <Text
            ohos:id="$+id:tv_des"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="12vp"
            ohos:right_of="$id:btn_back"
            ohos:text="图片"
            ohos:text_color="#ffffff"
            ohos:text_size="18fp"
            ohos:vertical_center="true"/>

        <Button
            ohos:id="$+id:btn_ok"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:selector_top_ok"
            ohos:left_margin="8vp"
            ohos:left_padding="16.0vp"
            ohos:min_height="30vp"
            ohos:min_width="48vp"
            ohos:right_margin="8vp"
            ohos:right_padding="16.0vp"
            ohos:text="完成(0/3)"
            ohos:text_color="#ffffff"
            ohos:text_size="14fp"
            ohos:vertical_center="true"/>

        <Image
            ohos:id="$+id:btn_del"
            ohos:height="match_parent"
            ohos:width="48vp"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:selector_back_press"
            ohos:padding="12vp"
            ohos:vertical_center="true"
            ohos:visibility="hide"
            ohos:image_src="$graphic:ic_vector_delete"
            />
    </DependentLayout>

    <!-- <com.lzy.imagepicker.view.CropImageView
         ohos:id="$+id:cv_crop_image"
         ohos:width="match_parent"
         ohos:height="match_parent"/>-->

    <com.lzy.imagepicker.view.CropImageView
        ohos:id="$+id:cv_crop_image"
        ohos:height="match_parent"
        ohos:width="match_parent"/>

    <!-- <com.lzy.imagepicker.view.crop.CropImageView2

<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#000000">

    <DependentLayout
        ohos:id="$+id:surface_container"
        ohos:height="match_parent"
        ohos:width="match_parent">
    </DependentLayout>

    <Image
        ohos:id="$+id:poster"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="#000000"
        ohos:scale_mode="stretch"/>

    <DirectionalLayout
        ohos:id="$+id:layout_bottom"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:alignment="vertical_center"
        ohos:orientation="horizontal"
        ohos:visibility="invisible">

        <Text
            ohos:id="$+id:current"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="14vp"
            ohos:text="00:00"
            ohos:text_color="#ffffff"
            ohos:text_size="12fp"/>

        <Slider
            ohos:id="$+id:bottom_seek_progress"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:bottom_padding="8vp"
            ohos:layout_alignment="vertical_center"
            ohos:left_padding="12vp"
            ohos:max="100"
            ohos:max_height="20vp"
            ohos:right_padding="12vp"
            ohos:top_padding="8vp"
            ohos:weight="1"/>

        <Text
            ohos:id="$+id:total"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="00:00"
            ohos:text_color="#ffffff"
            ohos:text_size="12fp"/>

        <Text
            ohos:id="$+id:clarity"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:clickable="true"
            ohos:left_padding="20vp"
            ohos:text="clarity"
            ohos:text_alignment="center"
            ohos:text_color="#ffffff"/>

        <Image
            ohos:id="$+id:fullscreen"
            ohos:height="35vp"
            ohos:width="35vp"
            ohos:background_element="$media:jz_enlarge"
            ohos:left_padding="14vp"
            ohos:right_padding="14vp"/>
    </DirectionalLayout>

    <ProgressBar
        ohos:id="$+id:bottom_progress"
        ohos:height="1.5vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:max="100"/>

    <Image
        ohos:id="$+id:back_tiny"
        ohos:height="24vp"
        ohos:width="24vp"
        ohos:left_margin="6vp"
        ohos:top_margin="6vp"
        ohos:visibility="hide"/>

    <DependentLayout
        ohos:id="$+id:layout_top"
        ohos:height="48vp"
        ohos:width="match_parent"
        ohos:align_parent_left="true"
        ohos:align_parent_start="true"
        ohos:align_parent_top="true"
        ohos:left_padding="10vp"
        ohos:start_padding="10vp"
        ohos:visibility="visible">

        <Image
            ohos:id="$+id:back"
            ohos:height="26vp"
            ohos:width="26vp"
            ohos:background_element="$graphic:jz_click_back_selector"
            ohos:padding="3vp"
            ohos:scale_mode="inside"
            ohos:top_margin="12vp"
            ohos:vertical_center="true"/>

        <Text
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:end_margin="12vp"
            ohos:end_of="$id:back"
            ohos:left_margin="5vp"
            ohos:left_of="$id:battery_time_layout"
            ohos:max_text_lines="2"
            ohos:right_of="$id:back"
            ohos:text_color="#ffffff"
            ohos:text_size="18fp"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:vertical_center="true"/>

        <DirectionalLayout
            ohos:id="$+id:battery_time_layout"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_end="true"
            ohos:align_parent_right="true"
            ohos:alignment="vertical_center"
            ohos:end_margin="14vp"
            ohos:orientation="vertical"
            ohos:right_margin="14vp"
            ohos:vertical_center="true"
            ohos:visibility="invisible">

            <Image
                ohos:id="$+id:battery_level"
                ohos:height="10vp"
                ohos:width="23vp"
                ohos:background_element="$media:jz_battery_level_10"
                ohos:layout_alignment="horizontal_center"/>

            <Text
                ohos:id="$+id:video_current_time"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="horizontal_center"
                ohos:max_text_lines="1"
                ohos:text_alignment="vertical_center"
                ohos:text_color="#ffffffff"
                ohos:text_size="12fp"/>
        </DirectionalLayout>
    </DependentLayout>

    <RoundProgressBar
        ohos:id="$+id:loading"
        ohos:height="45vp"
        ohos:width="45vp"
        ohos:horizontal_center="true"
        ohos:progress="20"
        ohos:progress_color="#FF666165"
        ohos:progress_width="2vp"
        ohos:vertical_center="true"
        ohos:visibility="invisible"/>

    <DirectionalLayout
        ohos:id="$+id:start_layout"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true">

        <Image
            ohos:id="$+id:start"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:background_element="$media:jz_play_normal"/>

    </DirectionalLayout>


    <Text
        ohos:id="$+id:replay_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:below="$id:start_layout"
        ohos:horizontal_center="true"
        ohos:text="$string:replay"
        ohos:text_color="#ffffff"
        ohos:text_size="12fp"
        ohos:top_margin="6vp"
        ohos:visibility="invisible"/>

    <DirectionalLayout
        ohos:id="$+id:retry_layout"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:horizontal_center="true"
        ohos:orientation="vertical"
        ohos:vertical_center="true"
        ohos:visibility="invisible">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:video_loading_failed"
            ohos:text_color="#ffffff"
            ohos:text_size="14fp"/>

        <Text
            ohos:id="$+id:retry_btn"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:jz_retry"
            ohos:bottom_padding="4vp"
            ohos:left_padding="9vp"
            ohos:right_padding="9vp"
            ohos:text="$string:click_to_restart"
            ohos:text_color="#ffffff"
            ohos:text_size="14fp"
            ohos:top_margin="15vp"
            ohos:top_padding="4vp"/>
    </DirectionalLayout>
</DependentLayout>
